</head>

<div class="page">
    <h3 class="title"><b>Sales Revenue</b></h3>
    <div id="container-1">
        <!--Start of Container 1-->
        <div class="col-card">
            <center>
                <h6>Total Sales</h6>
                <h3>4.16M</h3>
            </center>
        </div>
        <div class="col-card">
            <center>
                <h6>Total Sale Per Day</h6>
                <h3>4.16M</h3>
            </center>
        </div>
        <div class="col-card">
            <center>
                <h6>Ave Order Per Day</h6>
                <h3>4.16M</h3>
            </center>
        </div>
        <div class="col-card">
            <center>
                <h6>Total Order</h6>
                <h3>4.16M</h3>
            </center>
        </div>
    </div> <!--End of Container 1-->
    <div class="second-container">
        <div id="form-container">
            <!--Start of Container 3-->
            <div id="container-2">
                <!--Start of Container 2-->
                <div class="form-1"> <!--Start of form 1-->
                    
                    @Html.DropDownList("periodicity", periodicity, new { @class = "form-actions" })

                    @Html.DropDownList("year", year, new { @class = "form-actions" })

                    @Html.DropDownList("month", months, new { @class = "form-actions" })

                </div><!--End of form 1-->

                <div class="form-2">
                    <label for="start-date">from</label>
                    @Html.TextBox("date-start", null, new { @type = "date", @class = "form-actions" })
                    <label for="end-date">to</label>
                    @Html.TextBox("date-end", null, new { @type = "date", @class = "form-actions" })
                </div>
            </div> <!--End of Container 2-->

        </div>
        <div id="container-3">
            <!--End of Container 3-->
            <input type="button" value="Print Data" class="button-form" id="print-data"/>
            <input type="button" value="Reset" class="button-form" id="reset-data"/>
        </div>
    </div>
    <div id="container-4"> <!--All about data from database-->
        <div class="row1">

            <div id="chart_div"><div id="chart-part"></div></div>
        </div>
        <div class="row2"></div>
    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Month', ''],
            ['Jan',  1000],
            ['Feb',  1170],
            ['Mar',  660],
            ['Apr',  1030],
            ['May',  1030],
            ['Jun',  1030],
            ['Jul',  1000],
            ['Aug',  1170],
            ['Sep',  660],
            ['Oct',  1030],
            ['Nov',  1030],
            ['Dec',  1030]
        ]);

        var options = {
            hAxis: {title: 'Month',  titleTextStyle: {color: 'black'}},
            vAxis: {minValue: 0},
            backgroundColor: 'transparent',
            colors: ['#571b27']
        };

        var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
        chart.draw(data, options);
        }
</script>